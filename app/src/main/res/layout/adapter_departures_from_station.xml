<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/value_10dp"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/adapter_departures_time"
      android:layout_alignParentRight="true"
      android:layout_alignParentEnd="true"
      android:textSize="18sp"
      android:maxLines="1"
      android:layout_marginLeft="@dimen/value_8dp"
      android:layout_marginStart="@dimen/value_8dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/adapter_departures_direction"
      android:textSize="18sp"
      android:layout_toStartOf="@id/adapter_departures_time"
      android:layout_toLeftOf="@id/adapter_departures_time"
      android:layout_alignParentStart="true"
      android:maxLines="1"
      android:layout_alignParentLeft="true"
      android:textColor="@android:color/black"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

  <TextView
      android:id="@+id/adapter_departures_line_number"
      android:layout_below="@id/adapter_departures_direction"
      android:layout_alignParentBottom="true"
      android:maxLines="1"
      android:textAllCaps="true"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>

</RelativeLayout>